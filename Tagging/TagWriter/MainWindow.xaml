		<Label Content="Genre" Height="27" HorizontalAlignment="Left" Margin="12,194,0,0" Name="Label7" VerticalAlignment="Top" />
		<Label Content="Comments" Height="27" HorizontalAlignment="Left" Margin="12,225,0,0" Name="Label8" VerticalAlignment="Top" />
		<Label Content="Valid" Height="27" HorizontalAlignment="Left" Margin="12,253,0,0" Name="Label9" VerticalAlignment="Top" />
		<TextBox Margin="241,74,0,0" Name="LogBox" IsReadOnly="True" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
